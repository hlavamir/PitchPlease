shader ColorRampBase : TextureFX
{
    stage float2 FromXY = float2(0,0);
    stage float2 ToXY = float2(1,1);

    stage abstract float4 Ramp(Texture2D tex, float2 fromXY, float2 toXY, float4 c);

    stage override float4 Shading()
    {
        float4 c = InTex();
        float pa = c.a;
        c = Ramp(Texture1, FromXY, ToXY, c);
        c.a *= pa;
        return c;
    }
};

