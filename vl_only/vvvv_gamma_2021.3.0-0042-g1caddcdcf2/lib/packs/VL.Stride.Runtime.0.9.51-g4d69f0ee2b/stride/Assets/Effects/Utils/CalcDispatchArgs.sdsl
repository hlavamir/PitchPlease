shader CalcDispatchArgs : ComputeShaderBase
{
    Buffer<float4> CounterBuffer;
    RWBuffer<uint> ArgsBuffer;

    uint GroupSize;

    override void Compute()
    {
        ArgsBuffer[0] = (ArgsBuffer[0] + GroupSize - 1) / GroupSize;
        ArgsBuffer[1] = 1;
        ArgsBuffer[2] = 1;
    }   
};